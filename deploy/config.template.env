# Database Configuration
DATABASE_NAME=${DB_NAME:-pmtool}
DATABASE_USER=${DB_USER:-pmtool}
DATABASE_PASSWORD=${DB_PASSWORD}  # Required, must be set in environment
DATABASE_HOST=${DB_HOST:-localhost}

# API Keys - Required, must be set in environment
OPENAI_API_KEY=${OPENAI_API_KEY}
MOLLIE_TEST_API_KEY=${MOLLIE_TEST_API_KEY}
MOLLIE_LIVE_API_KEY=${MOLLIE_LIVE_API_KEY}
SENDGRID_API_KEY=${SENDGRID_API_KEY}

# Security - Required, must be set in environment
JWT_SECRET=${JWT_SECRET}
SESSION_SECRET=${SESSION_SECRET}

# Application URLs
FRONTEND_URL=${FRONTEND_URL:-https://docuplanai.com}
BACKEND_URL=${BACKEND_URL:-https://admin.docuplanai.com}

# Email Configuration
EMAILS_FROM_EMAIL=${EMAILS_FROM_EMAIL:-noreply@docuplanai.com}
EMAILS_FROM_NAME=${EMAILS_FROM_NAME:-DocuPlanAI}

# Service Configuration
DEBUG=${DEBUG:-False}
ALLOWED_HOSTS=${ALLOWED_HOSTS:-'["admin.docuplanai.com", "localhost"]'}
CORS_ORIGINS=${CORS_ORIGINS:-'["https://docuplanai.com", "http://localhost:3000"]'}
